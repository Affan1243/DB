<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Student Tracker</h1>
            <nav>
                <ul>
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/students">Students</a></li>
                    <li><a href="/attendance">Attendance</a></li>
                    <li><a href="/assignments">Assignments</a></li>
                    <li><a href="/courses">Courses</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container">
        <h2>Manage Students</h2>

        <section class="form-section">
            <h3>Add New Student</h3>
            <form action="/students" method="POST" class="data-form">
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" name="firstName" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" name="lastName" required>
                </div>
                <div class="form-group">
                    <label for="studentUniqueId">Student ID:</label>
                    <input type="text" id="studentUniqueId" name="studentUniqueId" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="dob">Date of Birth:</label>
                    <input type="date" id="dob" name="dob">
                </div>
                <div class="form-group">
                    <label for="enrollmentDate">Enrollment Date:</label>
                    <input type="date" id="enrollmentDate" name="enrollmentDate" value="<%= new Date().toISOString().slice(0,10) %>">
                </div>
                <button type="submit" class="btn">Add Student</button>
            </form>
        </section>

        <section class="data-display-section">
            <h3>All Students</h3>
            <% if (students && students.length > 0) { %>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Student ID</th>
                        <th>Email</th>
                        <th>DOB</th>
                        <th>Enrolled</th>
                        <th>Present Days</th>
                        <th>Absent Days</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.student_id %></td>
                        <td><%= student.first_name %> <%= student.last_name %></td>
                        <td><%= student.student_unique_id %></td>
                        <td><%= student.email %></td>
                        <td><%= student.date_of_birth ? new Date(student.date_of_birth).toLocaleDateString() : 'N/A' %></td>
                        <td><%= student.enrollment_date ? new Date(student.enrollment_date).toLocaleDateString() : 'N/A' %></td>
                        <td><%= student.total_present_days %></td>
                        <td><%= student.total_absent_days %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <p>No students found. Add a new student using the form above.</p>
            <% } %>
        </section>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 Student Tracker. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
